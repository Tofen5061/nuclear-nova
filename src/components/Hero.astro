---
// Aquí podrías recibir las imágenes como props si quisieras
const images = [
  { src: '/hero1.jpg', alt: 'Tornería Industrial' },
  { src: '/hero2.jpg', alt: 'Soldadura Especializada' },
  { src: '/hero3.jpg', alt: 'Maquinaria CNC' },
];
---

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<div class="swiper myHeroSlider">
  <div class="swiper-wrapper">
    {images.map((img) => (
      <div class="swiper-slide">
        <img src={img.src} alt={img.alt} />
        <div class="overlay">
            <h2>{img.alt}</h2>
            <a href="https://wa.me/50578983000" class="btn-cta">Cotizar Ahora</a>
        </div>
      </div>
    ))}
  </div>
  
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>

<style>
  .swiper {
    width: 100%;
    height: 80vh; /* Altura del slider */
    font-family: sans-serif;

  }
  .swiper-slide {
    position: relative;
  }
  .swiper-slide img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Para que la imagen cubra todo sin deformarse */
  }
  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.4); /* Capa oscura para que el texto se lea bien */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: white;
  }
  .btn-cta {
    background-color: #ffcc00; /* Color industrial */
    color: black;
    padding: 12px 24px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    margin-top: 20px;
  }
</style>

<script>
  import Swiper from 'swiper';
  import { Navigation, Pagination, Autoplay } from 'swiper/modules';

  // Inicialización de Swiper
  new Swiper('.myHeroSlider', {
    modules: [Navigation, Pagination, Autoplay],
    loop: true,
    autoplay: { delay: 4000 },
    pagination: { el: '.swiper-pagination', clickable: true },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>